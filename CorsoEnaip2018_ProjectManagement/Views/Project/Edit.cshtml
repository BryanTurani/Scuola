@using CorsoEnaip2018_ProjectManagement.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model Project

<!DOCTYPE html>
<html>
    <head>
        <title>Project details</title>
        <link rel="stylesheet" href="~/bootstrap.css" />
    </head>

    <body>
        <div class="container" style="width:500px;">
            <h1 class="text-center">Edit project details</h1>

            <form method="post">
                <div class="form-group">
                    <label class="control-label">Name</label>
                    <input class="form-control" asp-for="Name" />
                </div>

                <div class="form-group">
                    <label class="control-label">Client</label>
                    <input class="form-control" asp-for="Client" />
                </div>

                <div class="form-group">
                    <label class="control-label">Manager</label>
                    <input class="form-control" asp-for="Manager" />
                </div>

                <div class="form-group">
                    <label class="control-label">Start date</label>
                    <input type="date" class="form-control" asp-for="StartDate" />
                </div>

                <div class="form-group">
                    <label class="control-label">Finish date</label>
                    <input type="date" class="form-control" asp-for="FinishDate" />
                </div>

                <div class="form-group">
                    <label class="control-label">Delivery date</label>
                    <input type="date" class="form-control" asp-for="DeliveryDate" />
                </div>

                <div class="form-group">
                    <label class="control-label">Price</label>
                    <input type="number" class="form-control" asp-for="Price" />
                </div>

                <div class="form-group">
                    <label class="control-label">Cost</label>
                    <input type="number" class="form-control" asp-for="Cost" />
                </div>

                <div class="form-group">
                    <a href="/project/index" class="btn btn-default">Annulla</a>
                    <input type="submit" class="btn btn-primary" value="Salva" />
                </div>
            </form>
        </div>
    </body>
</html>